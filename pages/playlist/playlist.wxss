  width: 100%;
  flex-wrap: wrap;
  justify-content: space-around;
  font-size: 12px;
  color: #c5c5c5;
}

.playlist-panel {
  height: 180px;
  width: 48%;
  display: flex;
  flex-wrap: wrap;
  padding-bottom: 8px;
}

